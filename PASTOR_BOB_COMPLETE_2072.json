
const fs = require('fs');
const path = require('path');

function loadAllSermons() {
  const parts = [];
  let i = 1;
  while (true) {
    const file = path.join(__dirname, `SERMONS_PART_${i}.json`);
    if (!fs.existsSync(file)) break;
    parts.push(...JSON.parse(fs.readFileSync(file, 'utf-8')));
    i++;
  }
  return parts;
}

module.exports = loadAllSermons();
